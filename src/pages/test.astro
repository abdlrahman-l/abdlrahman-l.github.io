---
import Layout from "../components/layout.astro";
import logo from "/img/logo-grayscale.svg?raw";

const assetsUrl = 'img'
const products = [
  {
    href: 'https://weather-app-abdlrahmanls-projects.vercel.app',
    name: 'Weather Forecast',
    desc: "Weather forecast Indonesia, included province, regency, subdistrict, and ward/village within 3 days",
    dateInfo: 'July 2024',
    preview: { src: 'weather_app.webp', width: 100, height: 10 },
  },
  {
    href: 'https://receipt-two.vercel.app/',
    name: 'Food Recipe',
    desc: "Food recipe showcase article",
    dateInfo: 'September 2022',
    preview: { src: 'recipe.webp', width: 100, height: 10 },
  },
  {
    href: 'https://www.youtube.com/watch?v=3mgtNeIptgk',
    name: 'Playstore look like',
    desc: "Playstore look like",
    dateInfo: 'April 2020',
    preview: { src: 'playstore.webp', width: 100, height: 10 },
  },
];
---

<Layout
  title="Abdul Rahman"
  description="Abdul Rahman, a software engineer focused on web development and currently is focusing on fullstack."
>
  <main class="mx-auto max-w-2xl p-2 space-y-3">
    <header
      class="bg-black w-full min-h-16 rounded-xl flex items-center px-4 justify-between"
    >
      <div class="w-3">
        <Fragment set:html={logo} />
      </div>

      <nav class="flex space-x-3 cursor-pointer">
        <a href="/test#projects" class="hover:underline underline-offset-1">
          Projects
        </a>
        <a href="" class="hover:underline underline-offset-1"> Contacts </a>
      </nav>
    </header>
    <section
      class="bg-black w-full min-h-16 rounded-xl items-center p-4 flex justify-center flex-col space-y-3"
    >
      <div>
        <p class="pt-0.5 text-neutral-400 text-lg sm:text-2xl font-extralight">
          Abdul Rahman
        </p>
        <p class="pt-0.5 text-neutral-400 text-lg sm:text-xl font-extralight">
          Software Engineer
        </p>

        <p class="pt-4">
          Experienced software engineer with 5 years involved in developing
          innovative programs that expedite the efficiency and effectiveness of
          organizational success from International or National companies.
          Confident communicator, fast learner and problem solver, and an
          innovative engineer to develop customized software to meet companyâ€™s
          organizational needs.
        </p>
      </div>
    </section>
    <section
      class="bg-black w-full min-h-16 rounded-xl p-4 flex flex-col space-y-3"
      id="projects"
    >
    <h2 class="pt-0.5 text-neutral-400 text-lg sm:text-2xl font-extralight">
      Projects
    </h2>
    </section>
    <section
      class="bg-black w-full min-h-16 rounded-xl items-center p-4 flex justify-center flex-col space-y-3"
      id="projects"
    >

    {
      products.map((product, i) => {
        return (
          <section class="pt-10 pb-1">
            <div class="sm:flex sm:items-center sm:justify-between">
              <a
                href={product.href}
                target="_blank"
                class="[&:hover_h3]:underline [&:hover_h3]:decoration-dashed [&:hover_h3]:decoration-blue-400 inline-block -my-1 py-1"
              >
                <h3 class="inline font-semibold text-lg">{product.name}</h3>
                <svg
                  class="inline w-4 h-4 relative -top-0.5 text-blue-400"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  aria-hidden="true"
                  data-slot="icon"
                >
                  <path
                    fill-rule="evenodd"
                    d="M15.75 2.25H21a.75.75 0 0 1 .75.75v5.25a.75.75 0 0 1-1.5 0V4.81L8.03 17.03a.75.75 0 0 1-1.06-1.06L19.19 3.75h-3.44a.75.75 0 0 1 0-1.5Zm-10.5 4.5a1.5 1.5 0 0 0-1.5 1.5v10.5a1.5 1.5 0 0 0 1.5 1.5h10.5a1.5 1.5 0 0 0 1.5-1.5V10.5a.75.75 0 0 1 1.5 0v8.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V8.25a3 3 0 0 1 3-3h8.25a.75.75 0 0 1 0 1.5H5.25Z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
              <div class="text-sm bg-neutral-800 text-white inline-block rounded-md px-2 py-0.5">
                {product.dateInfo}
              </div>
            </div>
            <p class="text-sm pt-1.5 pb-4 text-neutral-400 font-light">{product.desc}</p>
            <div class="rounded-lg overflow-hidden relative border border-neutral-700">
              <img
                  src={`${assetsUrl}/${product.preview.src}`}
                  width={product.preview.width}
                  height={product.preview.height}
                  class="w-full"
                  alt={`${product.name} preview`}
                  loading="lazy"
                />
            </div>
          </section>
        );
      })
    }
    </section>
  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
